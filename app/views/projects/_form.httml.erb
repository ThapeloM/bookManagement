<%= simple_form_for(@project) do |f| %>
  <%= render :partial =>'layouts/errors', locals: { object: @project} %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name ,:autofocus => true, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :account_id %><br>
      <%= f.collection_select :account_id, @current_account, :id, :name, prompt: "Please Choose An Account", selected: @project.account_id, class: 'custom-dropdown'%>
    </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary"%>
  </div>
<% end %>
