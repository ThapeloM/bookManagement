<div class="page-header">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Project
  <% end %>
  <h1>Listing projects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Account</th>
            <th>View</th>
            <th>Edit</th>
            <th>Destory</th>
            <th>View Products</th>
            <th>PDF</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.account_id %></td>
            <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Products', products_path(project_id: project.id) %></td>
        <td><%= button_to "PDF", pdf_view_path(id: project.id), :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get %></td>
      <% end %>
    </tbody>
  </table>
</div>
