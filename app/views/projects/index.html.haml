.page-header
  = link_to new_project_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Project
  %h1 Listing projects

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Description
        %th Account
        %th View
        %th Edit
        %th Destroy
        %th View Products
        %th PDF

    %tbody
      = content_tag_for(:tr, @projects) do |project|
        %td= project.name
        %td= project.description
        %td= project.account_id
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to 'View Products', products_path(project_id: project.id)
        %th= button_to "PDF", pdf_view_path(id: project.id), :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get
